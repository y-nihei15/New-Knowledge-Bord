RewriteEngine On

# login.php は書き換えない
RewriteCond %{REQUEST_URI} !^/bbs/bbsTest/n-yoneda/main/login\.php$

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ main.php [QSA,L]

# JWT の公開鍵エンドポイントは維持
RewriteRule ^\.well-known/jwks\.json$ jwt/jwks.php [L]

# Authorization ヘッダを PHP に渡す
SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1
